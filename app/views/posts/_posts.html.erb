<div class="list-group">
  <ul>
    <% posts.each do |post| %>
      <li href="#" class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h6 class="mb-1"><%= post.title %></h6>
          <small class="text-muted">posted by "<%= post.user.name %>"</small>
        </div>
        <p class="mb-1"><%= post.content %></p>
        <small class="text-muted">#<%= post.small_genre.big_genre.big_genre %>  #<%= post.small_genre.small_genre %></small>
        <div>
          <%= render "favorites/like_button", post: post %>
          <% if current_user == post.user %>
            <%= link_to "編集", edit_post_path(post), class: "btn btn-link btn-sm" %>
            <%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除してもよろしいですか?" }, class: "btn btn-link btn-sm" %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
  <div style="margin: 0 auto;">
    <%= paginate posts %>
  </div>
</div>